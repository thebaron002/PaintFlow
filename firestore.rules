rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow users to read/write their own profile data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow users to manage their own jobs, income, and expenses
      match /jobs/{jobId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /income/{incomeId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /expenses/{expenseId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      match /payrollReports/{reportId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Allow any authenticated user to manage crew members
    match /crew/{crewId} {
      allow read, write: if request.auth != null;
    }
    
    // Global settings can be read by any authenticated user, but written only by an admin (future-proofing)
    match /settings/global {
      allow read: if request.auth != null;
      allow write: if false; // To be defined later, e.g., if resource.data.admin == true
    }
  }
}
