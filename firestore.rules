rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can only read/write their own profile
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);

      // Users can read/write their own subcollections
      match /{collection}/{docId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // Any authenticated user can read from the old jobs collection for migration
    match /jobs/{jobId} {
        allow read: if isSignedIn();
        allow write: if false; // Disallow writes to the old collection
    }

    // Any authenticated user can manage the shared crew collection
    match /crew/{crewId} {
      allow read, write: if isSignedIn();
    }

    // Settings are readable by any authenticated user, but writable only by admins (future-proofing)
    // For now, we will allow any authenticated user to write for simplicity of setup.
    match /settings/global {
      allow read, write: if isSignedIn();
    }
  }
}
