
{
  "entities": {
    "Job": {
      "title": "Job",
      "type": "object",
      "description": "Represents a single job or project.",
      "properties": {
        "id": { "type": "string", "description": "Unique ID for the job." },
        "title": { "type": "string", "description": "Title of the job." },
        "workOrderNumber": { "type": "string", "description": "Work order number for the job." },
        "address": { "type": "string", "description": "Physical address where the job is located." },
        "clientName": { "type": "string", "description": "The name of the client this job belongs to." },
        "startDate": { "type": "string", "format": "date-time", "description": "The start date of the job." },
        "deadline": { "type": "string", "format": "date-time", "description": "The deadline for the job." },
        "specialRequirements": { "type": "string", "description": "Any special requirements for the job." },
        "status": { "type": "string", "enum": ["Not Started", "In Progress", "Complete", "Open Payment", "Finalized"] },
        "budget": { "type": "number", "description": "The total payout/budget for the job." },
        "initialValue": { "type": "number" },
        "idealMaterialCost": { "type": "number" },
        "idealNumberOfDays": { "type": "number" },
        "productionDays": { "type": "array", "items": { "type": "string", "format": "date-time" } },
        "isFixedPay": { "type": "boolean" },
        "invoices": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "origin": {"type": "string"},
              "amount": {"type": "number"},
              "date": {"type": "string", "format": "date-time"},
              "notes": {"type": "string"}
            }
          } 
        },
        "adjustments": { 
          "type": "array", 
          "items": { 
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "type": { "type": "string", "enum": ["Time", "Material", "General"]},
              "description": {"type": "string"},
              "value": {"type": "number"},
              "hourlyRate": {"type": "number", "description": "The hourly rate at the time of a 'Time' adjustment."}
            }
          } 
        },
        "crew": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "crewMemberId": { "type": "string" },
              "name": { "type": "string" },
              "type": { "type": "string", "enum": ["Helper", "Partner"] }
            }
          }
        }
      },
      "required": ["id", "title", "address", "clientName", "deadline", "status", "budget"]
    },
    "CrewMember": {
      "title": "Crew Member",
      "type": "object",
      "description": "Represents a helper or partner.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": { "type": "string", "enum": ["Helper", "Partner"] },
        "dailyRate": { "type": "number" },
        "profitPercentage": { "type": "number" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" },
        "avatarUrl": { "type": "string", "format": "uri" }
      },
      "required": ["id", "name", "type", "avatarUrl"]
    },
    "Expense": {
      "title": "Expense",
      "type": "object",
      "description": "Represents an expense associated with a job.",
      "properties": {
        "id": { "type": "string" },
        "jobId": { "type": "string" },
        "category": { "type": "string", "enum": ["Materials", "Labor", "Transportation", "Other"] },
        "description": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "jobId", "category", "amount", "date"]
    },
    "Income": {
      "title": "Income",
      "type": "object",
      "description": "Represents an income payment associated with a job.",
      "properties": {
        "id": { "type": "string" },
        "jobId": { "type": "string" },
        "description": { "type": "string" },
        "amount": { "type": "number" },
        "date": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "jobId", "amount", "date"]
    },
    "GeneralSettings": {
      "title": "General Settings",
      "type": "object",
      "description": "Global settings for the application.",
      "properties": {
        "dailyPayTarget": { "type": "number", "description": "The target daily pay for profitability calculations." },
        "idealMaterialCostPercentage": { "type": "number", "description": "The ideal percentage of the job budget to be spent on materials." },
        "hourlyRate": { "type": "number", "description": "The default hourly rate for 'Time' adjustments." }
      }
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "/jobs/{jobId}": {
      "schema": { "$ref": "#/entities/Job" },
      "description": "Stores individual job documents."
    },
    "/crew/{crewMemberId}": {
      "schema": { "$ref": "#/entities/CrewMember" },
      "description": "Stores crew member documents."
    },
    "/income/{incomeId}": {
      "schema": { "$ref": "#/entities/Income" },
      "description": "Stores income records for all jobs."
    },
    "/expenses/{expenseId}": {
      "schema": { "$ref": "#/entities/Expense" },
      "description": "Stores expense records for all jobs."
    },
    "/settings/global": {
      "schema": { "$ref": "#/entities/GeneralSettings" },
      "description": "Stores the single global settings document for the app."
    }
  }
}
